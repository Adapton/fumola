use std::str::FromStr;
//use std::collections::HashMap;
use crate::ast::{Id, Exp};

grammar;

pub Exp: Exp = {
    "_?_" => Exp::Hole,
    "return" <e:Exp> => Exp::Return(e),
};

pub Num: i32 = {
    r"[0-9]+" => i32::from_str(<>).unwrap()
};

pub Id: Id = {
    r"[a-zA-Z][a-zA-Z_0-9]*" => String::from_str(<>).unwrap()
};

